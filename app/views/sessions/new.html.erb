

<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-10 col-md-8 col-lg-6">
      <div class="text-center">
        <h1>Log in</h1>
      </div>

      <%= simple_form_for :user do |f| %>

      <%= f.input :email %>

      <%= f.input :password %>
      <div class="text-center">
        <%= f.submit 'Log In', class: 'btn btn-primary' %>
      </div>

      <% end %>
    </div>
  </div>
</div>
